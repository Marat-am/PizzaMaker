<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">



    <servlet>
        <servlet-name>tabeleControler</servlet-name>
        <servlet-class>com.example.pizzamakerservice.controler.TableController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>tabeleControler</servlet-name>
        <url-pattern>/table</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>ingredientControler</servlet-name>
        <servlet-class>com.example.pizzamakerservice.controler.IngredientController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>ingredientControler</servlet-name>
        <url-pattern>/ingredient</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>producttControler</servlet-name>
        <servlet-class>com.example.pizzamakerservice.controler.ProductController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>producttControler</servlet-name>
        <url-pattern>/product</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>productTypeControler</servlet-name>
        <servlet-class>com.example.pizzamakerservice.controler.ProductTypeController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>productTypeControler</servlet-name>
        <url-pattern>/producttype</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>OrderController</servlet-name>
        <servlet-class>com.example.pizzamakerservice.controler.OrderController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>OrderController</servlet-name>
        <url-pattern>/admin/order</url-pattern>
    </servlet-mapping>



</web-app>